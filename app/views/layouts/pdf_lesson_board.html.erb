      body {
        font-family: Arial, sans-serif;
        font-size: 12px;
        width: 210mm;
        margin: auto;
        padding: 20px;
      }
      .lessons-table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
      }
